{
  "name": "mrab-project-to-text",
  "displayName": "project-to-text",
  "description": "Convert your project to a text representation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mrab54/mrab-project-to-text.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "projectToText.generate",
        "title": "Project to Text: Generate"
      },
      {
        "command": "projectToText.toggleFile",
        "title": "Project to Text: Toggle File"
      },
      {
        "command": "projectToText.generateQuick",
        "title": "Project to Text: Quick Generate"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "projectToTextView",
          "name": "Project to Text: Select Files"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Project to Text Configuration",
      "properties": {
        "projectToText.include": {
          "type": "array",
          "description": "Glob patterns of files to include.",
          "default": [
            "**/*"
          ]
        },
        "projectToText.exclude": {
          "type": "array",
          "description": "Glob patterns of files to exclude.",
          "default": [
            "**/node_modules/**",
            "**/.git/**"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}